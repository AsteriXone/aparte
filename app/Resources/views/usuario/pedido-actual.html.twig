{% extends 'layout.html.twig' %}
{% block content %}
    {#<h1 class="text-center">Muestras</h1>#}

    {#<p>Id Grupo: {{ idGrupo }}</p>#}
    {#{% for muestra in muestras %}#}
    {#<p>{{ muestra.imageName }}</p>#}
    {#{% endfor %}#}
    {#{{ form_start(form) }}#}
    {#{{ form_widget(form) }}#}

    {#Hola <input type="checkbox" name="a" value="pepe" title="Hola">#}
    {#<input type="submit" value="Create"#}
    {#class="btn btn-success" />#}
    {#{{ form_end(form) }}#}
    {#<div><p>Método: {{ method }}</p></div>#}

    <div class="container-fluid">
        <div id="confirmDialog">Pedido Actual</div>

        {% if (error) %}
            <div class="text-center alert alert-danger">{{ error }}</div>
        {% endif %}

        {% if (mensaje) %}
            <div class="text-center alert alert-success">{{ mensaje }}</div>
        {% endif %}
        <form action="{{ path('muestras') }}" method="post" name="usuario_muestra">
            <div class="row">
                {% for muestra in muestras %}
                    <div style="height: 285px; padding: 5px;" class="col-sm-2">
                        <div class="sombrear" style="box-shadow: 1px 1px 2px #888; border-radius: 15px; border: 1px solid rgba(125,125,125, 0.1); padding: 7px; margin-bottom: 15px">
                            <div class="row">
                                <div style=" max-height: 150px; min-height: 150px" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <img style="max-height: 150px;" class="img-responsive center-block" src="{{ asset('img/muestras/' ~ muestra.getMuestra.getImageName) }}">
                                </div>
                            </div>

                            <div>

                                {#<div class="descripción {% if (muestra.getDescripcion) %}alert alert-danger{% endif %}">#}
                                {#<p>{{ muestra.getDescripcion }}</p>#}
                                {#</div>#}
                                <div>
                                    <h4>Precio: {{ muestra.getPrecio }}€</h4>
                                </div>
                                <div style="margin-bottom: 10px;" class="row">
                                    <div style="padding-top: 5px;" class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                        <strong>Cantidad:</strong>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                        <input min="0" max="25"  type="number" class="form-control" name="cant-{{ muestra.getMuestra.getId }}" value="{{ muestra.getCantidad }}">
                                    </div>
                                </div>
                                <div class="text-center" style="margin-top: 5px">
                                    <label>
                                        <input type="checkbox" name="checkbox-{{ muestra.getMuestra.getId }}" value="{{ muestra.getMuestra.getId }}" {% if (muestra.getEstado == 'seleccionada') %}checked{% endif %}> Seleccionar
                                    </label>
                                    {#<hr style="width: 80px; margin: 6px auto" class="half-rule">#}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% if (mensaje) %}
                <a style="width: 100px" href="{{ path('muestras') }}" role="button" class="btn btn-success center-block">Continuar</a>
            {% endif %}
            <br/>

        </form>
    </div>
    <script>
        document.getElementById('botonPedido').onclick = function (e) {
            if (confirm('¿Esta seguro?')){
                    $('#confirmDialog').append('<h1>Si</h1>');
                    location.href = '{{ path('pedido') }}';
                } else {
                    $('#confirmDialog').append('<h1>No</h1>');
                    e.preventDefault();
                }
            };
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .sombrear:hover{
            background-color: #eeeeee;
        }
    </style>

{% endblock %}