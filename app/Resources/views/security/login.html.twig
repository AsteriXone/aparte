{% extends 'layout.html.twig' %}
{% block title %}Login{% endblock %}
{% block content %}
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">ACCESO</h3>
                    </div>
                    <div class="panel-body">
                        {% if error %}
                            <div class="text-center alert alert-danger">Usuario o password incorrectos!</div>
                        {% endif %}
                        <form action="{{ path('login') }}" method="post" role="form">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Usuario" type="text" id="username" name="_username" value="{{ last_username }}" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="_password" type="password" value="">
                                </div>

                                <!-- Change this to a button or input when using this as a form -->
                                <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
                            </fieldset>
                        </form>
                    </div>
                     <div class="panel-body">
                         <!-- div class="alert alert-danger"> #error.messageKey|trans(error.messageData, 'security') </div -->

                        <div class="text-center">
                            <p>¿Aún no estás registrado? <a href="/registrar">Regístrate</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}